{
  "$schema": "./schemas/auth-schema.json",
  "_comment": "CONFIGURACI√ìN DE AUTENTICACI√ìN - Para habilitar Google/Apple OAuth: 1) Obt√©n client IDs desde Google Cloud Console y Apple Developer Portal, 2) Actualiza los campos clientId con tus credenciales reales, 3) Configura las URIs de redirecci√≥n en las consolas de desarrollador, 4) NUNCA expongas client secrets en c√≥digo del cliente - usa un backend",
  "authentication": {
    "providers": {
      "local": {
        "enabled": true,
        "type": "local",
        "config": {
          "sessionKey": "dryouu_session",
          "tokenExpiry": 86400000,
          "rememberMe": true,
          "rememberMeDuration": 2592000000
        }
      },
      "webauthn": {
        "enabled": true,
        "type": "webauthn",
        "name": "Passkey / Biometric",
        "icon": "üîê",
        "config": {
          "rpName": "DrYouu Research Lab",
          "rpId": "dryouu.uk",
          "timeout": 60000,
          "attestation": "none",
          "authenticatorAttachment": "platform",
          "requireResidentKey": false,
          "userVerification": "preferred"
        }
      },
      "google": {
        "enabled": true,
        "type": "oauth2",
        "name": "Google",
        "icon": "üîµ",
        "config": {
          "clientId": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
          "authUrl": "https://accounts.google.com/o/oauth2/v2/auth",
          "tokenUrl": "https://oauth2.googleapis.com/token",
          "scope": "openid email profile",
          "redirectUri": "https://dryouu.uk/public/login.html"
        }
      },
      "github": {
        "enabled": false,
        "type": "oauth2",
        "name": "GitHub",
        "icon": "‚ö´",
        "config": {
          "clientId": "YOUR_GITHUB_CLIENT_ID",
          "authUrl": "https://github.com/login/oauth/authorize",
          "tokenUrl": "https://github.com/login/oauth/access_token",
          "scope": "read:user user:email",
          "redirectUri": "https://dryouu.uk/public/login.html"
        }
      },
      "apple": {
        "enabled": true,
        "type": "oauth2",
        "name": "Apple",
        "icon": "‚ö™",
        "config": {
          "clientId": "YOUR_APPLE_CLIENT_ID",
          "authUrl": "https://appleid.apple.com/auth/authorize",
          "tokenUrl": "https://appleid.apple.com/auth/token",
          "scope": "name email",
          "redirectUri": "https://dryouu.uk/public/login.html",
          "responseMode": "form_post"
        }
      }
    },
    "security": {
      "mfa": {
        "enabled": true,
        "required": false,
        "methods": ["totp", "webauthn"]
      },
      "rateLimit": {
        "enabled": true,
        "maxAttempts": 5,
        "windowMs": 900000,
        "blockDuration": 1800000
      },
      "sessionSecurity": {
        "httpOnly": true,
        "secure": true,
        "sameSite": "strict",
        "regenerateOnLogin": true
      },
      "passwordPolicy": {
        "minLength": 12,
        "requireUppercase": true,
        "requireLowercase": true,
        "requireNumbers": true,
        "requireSpecialChars": true,
        "preventCommonPasswords": true
      }
    },
    "ui": {
      "showProviderIcons": true,
      "allowRememberMe": true,
      "showPasswordStrength": true,
      "enableBiometricPrompt": true,
      "theme": "dark"
    }
  },
  "demo": {
    "enabled": true,
    "warning": "This is a demo authentication system. Do not use in production without proper backend implementation. Change these credentials before deployment!",
    "credentials": {
      "username": "admin",
      "password": "CHANGE_ME_BEFORE_PRODUCTION"
    }
  }
}
